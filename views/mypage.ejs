<%- include('partials/header'); %>

<body>
    <h1 class="text-2xl text-center mb-2">マイページ</h1>

    <div class="bg-white py-6 sm:py-8 lg:py-12">
        <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
      
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-4 md:gap-x-16 gap-y-16">

            <!-- product - start -->
        <% tables.forEach((item) => { %>

            <div>
              <a href="/item/<%= item.id %>" class="group h-auto block bg-gray-100 overflow-hidden shadow-lg mb-2 lg:mb-3">
                <img src="/images/<%= JSON.parse(item.path)[0] %>" loading="lazy" alt="Photo by Austin Wade" class="w-full h-full object-cover object-center group-hover:scale-105 transition duration-200" />
              </a>
      
              <div class="flex flex-col">
                <a href="/item/<%= item.id %>" class="text-gray-800 hover:text-gray-500 text-lg lg:text-xl font-bold transition duration-100 text-center"><%= item.name %></a>
              </div>
            </div>
            <!-- product - end -->

        <% }) %>

          </div>
        </div>
      </div>
